<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/borrow_details_xsb_activity_top"
        layout="@layout/common_topbar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/borrow_details_xsb_activity_top"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/borrow_detail_xsb_activity_borrowname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_measure_18dp"
                    android:layout_marginRight="@dimen/common_measure_18dp"
                    android:layout_marginTop="@dimen/common_measure_24dp"
                    android:textColor="@color/gray4"
                    android:textSize="@dimen/common_measure_22dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_measure_80dp"
                    android:layout_marginBottom="@dimen/common_measure_10dp"
                    android:layout_marginLeft="@dimen/common_measure_18dp"
                    android:layout_marginRight="@dimen/common_measure_18dp"
                    android:layout_marginTop="@dimen/common_measure_20dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <!-- 年化收益 -->

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/borrow_details_xsb_activity_invest_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textColor="@color/orange_text"
                                android:textSize="@dimen/common_measure_32dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/common_measure_5dp"
                                android:text="%"
                                android:textColor="@color/orange_text"
                                android:textSize="@dimen/common_measure_16dp" />
                            
                            <!-- <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/common_measure_5dp"
                                android:text="+"
                                android:textColor="@color/orange_text"
                                android:textSize="@dimen/common_measure_26dp" />
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7"
                                android:textColor="@color/orange_text"
                                android:textSize="@dimen/common_measure_32dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/common_measure_5dp"
                                android:text="%"
                                android:textColor="@color/orange_text"
                                android:textSize="@dimen/common_measure_16dp" /> -->

                            
                        </LinearLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="年化利率"
                            android:textColor="@color/gray1"
                            android:textSize="@dimen/common_measure_16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <!-- 期限 -->

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/borrow_details_xsb_invest_time_limit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/common_measure_32dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/common_measure_5dp"
                                android:text="天"
                                android:textColor="@color/gray1"
                                android:textSize="@dimen/common_measure_16dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="期限"
                            android:textColor="@color/gray1"
                            android:textSize="@dimen/common_measure_16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <!-- 募集金额 -->

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/borrow_details_xsb_activity_invest_total_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/common_measure_32dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/common_measure_5dp"
                                android:text="万"
                                android:textColor="@color/gray1"
                                android:textSize="@dimen/common_measure_16dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="募集金额"
                            android:textColor="@color/gray1"
                            android:textSize="@dimen/common_measure_16dp" />
                    </LinearLayout>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/borrow_details_xsb_activity_pb"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_measure_8dp"
                    android:layout_marginLeft="@dimen/common_measure_18dp"
                    android:layout_marginRight="@dimen/common_measure_18dp"
                    android:max="10000"
                    android:maxHeight="@dimen/common_measure_10dp"
                    android:minHeight="@dimen/common_measure_8dp"
                    android:progressDrawable="@drawable/style_hor_progressbar_blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_measure_18dp"
                    android:layout_marginRight="@dimen/common_measure_18dp"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="标的剩余可投金额"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/common_measure_16dp" />

                    <TextView
                        android:id="@+id/borrow_details_xsb_activity_borrow_balance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@color/common_topbar_bg_color"
                        android:textSize="@dimen/common_measure_16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="元"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/common_measure_16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_measure_30dp"
                    android:layout_marginBottom="@dimen/common_measure_10dp"
                    android:layout_marginLeft="@dimen/common_measure_18dp"
                    android:layout_marginRight="@dimen/common_measure_18dp"
                    android:layout_marginTop="@dimen/common_measure_25dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/common_measure_15dp"
                        android:layout_height="@dimen/common_measure_17dp"
                        android:src="@drawable/prompt_img1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_measure_5dp"
                        android:text="投资3000元，预期收益"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/common_measure_16dp" />

                    <!-- 3000块钱的收益 -->

                    <TextView
                        android:id="@+id/borrow_details_xsb_activity_profit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00.00"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/common_measure_16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/common_measure_16dp" />

                    <TextView
                        android:id="@+id/borrow_details_xsb_activity_repay_type1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/common_measure_23dp"
                        android:layout_marginLeft="@dimen/common_measure_5dp"
                        android:background="@drawable/style_rect_fillet_filling_cyan"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/common_measure_3dp"
                        android:paddingRight="@dimen/common_measure_3dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_measure_14dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_measure_10dp"
                    android:layout_marginLeft="@dimen/common_measure_30dp"
                    android:layout_marginRight="@dimen/common_measure_30dp"
                    android:layout_marginTop="@dimen/common_measure_10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单笔加入："
                        android:textColor="@color/gray"
                        android:textSize="@dimen/common_measure_18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="不低于100元且为100元的整数倍"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/common_measure_18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_measure_10dp"
                    android:layout_marginLeft="@dimen/common_measure_30dp"
                    android:layout_marginRight="@dimen/common_measure_30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最高认购额度："
                        android:textColor="@color/gray"
                        android:textSize="@dimen/common_measure_18dp" />

                    <TextView
                        android:id="@+id/borrow_detail_xsb_activity_highest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/common_measure_18dp" />
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_measure_10dp"
                    android:layout_marginLeft="@dimen/common_measure_30dp"
                    android:layout_marginRight="@dimen/common_measure_30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还款方式："
                        android:textColor="@color/gray"
                        android:textSize="@dimen/common_measure_18dp" />

                    <TextView
                        android:id="@+id/borrow_details_xsb_activity_repay_type2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/common_measure_18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_measure_10dp"
                    android:layout_marginLeft="@dimen/common_measure_30dp"
                    android:layout_marginRight="@dimen/common_measure_30dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起息日："
                        android:textColor="@color/gray"
                        android:textSize="@dimen/common_measure_18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T（满标日）+1天"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/common_measure_18dp" />
                </LinearLayout>

            </LinearLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_measure_1dp"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:background="@color/edittext_line_color" />
            <!-- 新手标介绍 -->

            <LinearLayout
                android:id="@+id/borrow_details_xsb_activity_intro_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_66dp"
                android:background="@drawable/long_btn_click_selector"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_measure_30dp"
                    android:layout_weight="1"
                    android:text="新手标介绍"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_20dp" />

                <ImageView
                    android:layout_width="@dimen/common_measure_8dp"
                    android:layout_height="@dimen/common_measure_12dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/common_measure_30dp"
                    android:background="@drawable/my_account_arrow"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_measure_1dp"
                android:background="@color/edittext_line_color" />
            <!-- 项目介绍 -->

            <LinearLayout
                android:id="@+id/borrow_details_xsb_activity_info_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_66dp"
                android:background="@drawable/long_btn_click_selector"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_measure_30dp"
                    android:layout_weight="1"
                    android:text="项目信息"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_20dp" />

                <ImageView
                    android:layout_width="@dimen/common_measure_8dp"
                    android:layout_height="@dimen/common_measure_12dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/common_measure_30dp"
                    android:background="@drawable/my_account_arrow"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_measure_1dp"
                android:background="@color/edittext_line_color" />

            <!-- 安全保障 -->

            <LinearLayout
                android:id="@+id/borrow_details_xsb_activity_safe_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_66dp"	
                android:background="@drawable/long_btn_click_selector"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_measure_30dp"
                    android:layout_weight="1"
                    android:text="安全保障"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_20dp" />

                <ImageView
                    android:layout_width="@dimen/common_measure_8dp"	
                    android:layout_height="@dimen/common_measure_12dp"
                    android:layout_marginRight="@dimen/common_measure_30dp"
                    android:background="@drawable/my_account_arrow"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_measure_1dp"
                android:background="@color/edittext_line_color" />
            <!-- 资质证书 -->

            <LinearLayout
                android:id="@+id/borrow_details_xsb_activity_certificate_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_66dp"
                android:background="@drawable/long_btn_click_selector"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_measure_30dp"
                    android:layout_weight="1"
                    android:text="相关资料"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_20dp" />

                <ImageView
                    android:layout_width="@dimen/common_measure_8dp"
                    android:layout_height="@dimen/common_measure_12dp"
                    android:layout_marginRight="@dimen/common_measure_30dp"
                    android:background="@drawable/my_account_arrow"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_measure_1dp"
                android:background="@color/edittext_line_color" />
            <!-- 投资记录 -->

            <LinearLayout
                android:id="@+id/borrow_details_xsb_activity_record_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_66dp"
                android:background="@drawable/long_btn_click_selector"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_measure_30dp"
                    android:layout_weight="1"
                    android:text="投资记录"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_20dp" />

                <ImageView
                    android:layout_width="@dimen/common_measure_8dp"
                    android:layout_height="@dimen/common_measure_12dp"
                    android:layout_marginRight="@dimen/common_measure_30dp"
                    android:background="@drawable/my_account_arrow"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_measure_1dp"
                android:background="@color/edittext_line_color" />

            <Button
                android:id="@+id/borrow_detail_xsb_activity_bidBtn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_63dp"
                android:layout_marginBottom="@dimen/common_measure_30dp"
                android:layout_marginLeft="@dimen/common_measure_20dp"
                android:layout_marginRight="@dimen/common_measure_20dp"
                android:layout_marginTop="@dimen/common_measure_20dp"
                android:background="@drawable/blue_fillet_btn_selector"
                android:text="@string/borrow_detail_bidBtn"
                android:textColor="@color/white"
                android:textSize="@dimen/common_measure_26dp" />
        </LinearLayout>
    </ScrollView>

    <!-- android:background="@drawable/bid_activity_bottom_selector" -->

</RelativeLayout>