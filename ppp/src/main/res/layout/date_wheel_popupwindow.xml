<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/edittext_line_color"
              android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_50dp"
        android:background="@color/blue6">

        <TextView
            android:id="@+id/date_wheel_popwindow_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:gravity="center_vertical"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="@dimen/common_measure_20dp"/>

        <TextView
            android:id="@+id/date_wheel_popwindow_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:gravity="center_vertical"
            android:text="确定"
            android:textColor="@color/black"
            android:textSize="@dimen/common_measure_20dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_300dp">

        <com.wx.wheelview.widget.WheelView
            android:id="@+id/date_wheel_popwindow_yearwheelview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <com.wx.wheelview.widget.WheelView
            android:id="@+id/date_wheel_popwindow_monthwheelview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
