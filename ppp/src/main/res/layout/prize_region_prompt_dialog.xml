<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/common_measure_20dp"
    android:layout_marginRight="@dimen/common_measure_20dp"
    android:background="@drawable/style_rect_fillet_filling_white_dialog"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/prize_region_prompt_dialog_delbtn"
        android:layout_width="@dimen/common_measure_25dp"
        android:layout_height="@dimen/common_measure_25dp"
        android:layout_gravity="right|top"
        android:layout_marginRight="@dimen/common_measure_15dp"
        android:layout_marginTop="@dimen/common_measure_15dp"
        android:src="@drawable/delete_btn" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_130dp"
        android:gravity="center"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/prize_region_prompt_dialog_top_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="恭喜您领取成功！"
            android:textColor="@color/red"
            android:textSize="@dimen/common_measure_20dp" />

        <TextView
            android:id="@+id/prize_region_prompt_dialog_bottom_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_measure_10dp"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.2"
            android:text="能让您喜欢是我的荣幸！"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/prize_region_prompt_dialog_btn"
        android:layout_width="@dimen/common_measure_150dp"
        android:layout_height="@dimen/common_measure_50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/common_measure_30dp"
        android:layout_marginTop="@dimen/common_measure_15dp"
        android:background="@drawable/style_rect_fillet_filling_yellow1"
        android:gravity="center"
        android:text="查看礼品	"
        android:textColor="@color/black"
        android:textSize="@dimen/common_measure_22dp" />

</LinearLayout>