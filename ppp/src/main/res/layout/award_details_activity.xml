<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >
    
    <include 
        layout="@layout/common_topbar"/>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color"
        android:layout_marginTop="@dimen/common_measure_20dp"/>
    
    <LinearLayout
        android:id="@+id/award_details_actiivty_yjb_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_76dp"
        android:background="@drawable/long_btn_click_selector">
        
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_22dp"
            android:text="我的元金币"/>
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_account_arrow"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_measure_20dp"/>
        
    </LinearLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color"/>
    
    <LinearLayout 
        android:id="@+id/award_details_actiivty_jxq_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_76dp"
        android:background="@drawable/long_btn_click_selector">
        
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_22dp"
            android:text="加息券"/>
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_account_arrow"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_measure_20dp"/>
        
    </LinearLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color"/>
    
    <LinearLayout 
        android:id="@+id/award_details_actiivty_lp_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_76dp"
        android:background="@drawable/long_btn_click_selector">
        
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_22dp"
            android:text="我的礼品"/>
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_account_arrow"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_measure_20dp"/>
        
    </LinearLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color"/>
    
    <!-- 我的红包 -->
    <LinearLayout 
        android:id="@+id/award_details_actiivty_hb_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_76dp"
        android:background="@drawable/long_btn_click_selector">
        
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_22dp"
            android:text="我的红包"/>
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_account_arrow"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_measure_20dp"/>
        
    </LinearLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color"/>

    <LinearLayout
        android:id="@+id/award_details_activity_tyj_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_76dp"
        android:background="@drawable/long_btn_click_selector">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_22dp"
            android:text="我的体验金"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_account_arrow"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_measure_20dp"/>

        <!-- 开关按钮 -->
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color"/>

</LinearLayout>
