<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center_vertical"
              android:background="@drawable/style_rect_fillet_filling_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_100dp"
        android:gravity="center">
        
        <ImageView
            android:layout_width="@dimen/common_measure_56dp"
            android:layout_height="@dimen/common_measure_64dp"
            android:scaleType="fitCenter"
            android:src="@drawable/recharge_result_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_10dp"
            android:text="实名认证成功！"
            android:textSize="@dimen/common_measure_24dp"
            android:textColor="@color/first_page_wenying_color"/>
        
    </LinearLayout>
    
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="提示：现在充值，开始进行投资。"
            android:textSize="@dimen/common_measure_20dp"
            android:textColor="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_measure_20dp">

        <Button
            android:id="@+id/verify_suc_popwindow_recharge_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_50dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/common_measure_5dp"
            android:background="@drawable/blue_fillet_btn_selector"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/common_measure_24dp"
            android:text="去充值"/>

        <Button
            android:id="@+id/verify_suc_popwindow_cancel_btn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_50dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/common_measure_5dp"
            android:background="@drawable/style_rect_fillet_blue"
            android:gravity="center"
            android:textColor="@color/common_topbar_bg_color"
            android:textSize="@dimen/common_measure_24dp"
            android:text="下次再说"/>

    </LinearLayout>

</LinearLayout>


