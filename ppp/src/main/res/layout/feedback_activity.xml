<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >
    
    <include 
        layout="@layout/common_topbar"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_50dp"
        android:layout_marginLeft="@dimen/common_measure_10dp"
        android:layout_marginRight="@dimen/common_measure_10dp"
        android:layout_marginTop="@dimen/common_measure_50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right|top"
            android:text="*问题分类："
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:orientation="horizontal">
            
            <Spinner 
                android:layout_width="@dimen/common_measure_100dp"
                android:layout_height="fill_parent"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="*为必填项"
                android:textColor="@color/red"
                android:textSize="14sp"/>
            
        </LinearLayout>
        
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_50dp"
        android:layout_marginLeft="@dimen/common_measure_10dp"
        android:layout_marginRight="@dimen/common_measure_10dp"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right|top"
            android:text="*贵姓："
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        
        <EditText 
            android:id="@+id/feedback_activity_name"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:background="@drawable/style_rect_fillet_gray"/>
        
        <View 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
        
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_50dp"
        android:layout_marginLeft="@dimen/common_measure_10dp"
        android:layout_marginRight="@dimen/common_measure_10dp"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right|top"
            android:text="*联系方式："
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        
        <EditText 
            android:id="@+id/feedback_activity_contact"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:background="@drawable/style_rect_fillet_gray"/>
        
        <View 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
        
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_200dp"
        android:layout_marginLeft="@dimen/common_measure_10dp"
        android:layout_marginRight="@dimen/common_measure_10dp"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right|top"
            android:text="*留言内容："
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        
        <EditText 
            android:id="@+id/feedback_activity_content"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:textCursorDrawable="@null"
            android:background="@drawable/style_rect_fillet_gray"
            android:inputType="textMultiLine"
            android:gravity="top"/>
        
    </LinearLayout>
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_50dp"
        android:layout_marginLeft="@dimen/common_measure_10dp"
        android:layout_marginRight="@dimen/common_measure_10dp"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right|top"
            android:text="*验证码："
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="@color/black"/>
        
        <EditText 
            android:id="@+id/feedback_activity_authnum"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:numeric="integer"
            android:textCursorDrawable="@null"
            android:background="@drawable/style_rect_fillet_gray"/>
        
        <ImageView 
            android:id="@+id/feedback_activity_authimage"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="看不清换一张"
            android:textSize="14sp"
            android:textColor="@color/gray1"
            android:singleLine="true"
            android:gravity="center_vertical|left"/>
        
    </LinearLayout>
    
    
    <Button 
        android:id="@+id/feedback_activity_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_50dp"
        android:layout_marginLeft="@dimen/common_measure_50dp"
        android:layout_marginRight="@dimen/common_measure_50dp"
        android:layout_marginTop="@dimen/common_measure_50dp"
        android:text="提交"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"/>

</LinearLayout>
