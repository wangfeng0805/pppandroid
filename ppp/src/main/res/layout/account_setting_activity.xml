<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >

    <include layout="@layout/common_topbar" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:layout_marginTop="@dimen/common_measure_20dp"
        android:background="@color/edittext_line_color" />

    <!-- 用户名 -->
    <LinearLayout
        android:id="@+id/account_setting_username_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_75dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_measure_30dp"
        android:paddingRight="@dimen/common_measure_20dp" >

        <ImageView
            android:layout_width="@dimen/common_measure_26dp"
            android:layout_height="@dimen/common_measure_26dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/account_setting_logo1" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="用户名"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_22dp" />

        <TextView
            android:id="@+id/account_setting_username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:textSize="@dimen/common_measure_18dp"
            android:textColor="@color/edittext_hint_color" />
    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color" />
    
    <!-- 实名认证 -->
    <LinearLayout
        android:id="@+id/account_setting_smrz_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_75dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_measure_30dp"
        android:paddingRight="@dimen/common_measure_20dp" >

        <ImageView
            android:layout_width="@dimen/common_measure_26dp"
            android:layout_height="@dimen/common_measure_26dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/account_setting_logo2" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="实名认证"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_22dp" />

        <TextView
            android:id="@+id/account_setting_realname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:textSize="@dimen/common_measure_18dp"
            android:textColor="@color/edittext_hint_color" />
    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color" />
    
    <!-- 身份认证 -->
    <LinearLayout
        android:id="@+id/account_setting_sfrz_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_75dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_measure_30dp"
        android:paddingRight="@dimen/common_measure_20dp" >

        <ImageView
            android:layout_width="@dimen/common_measure_26dp"
            android:layout_height="@dimen/common_measure_26dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/account_setting_logo3" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="身份认证"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_22dp" />

        <TextView
            android:id="@+id/account_setting_idnumber_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:textSize="@dimen/common_measure_18dp"
            android:textColor="@color/edittext_hint_color" />
    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color" />
    
    <!-- 手机号码 -->
    <LinearLayout
        android:id="@+id/account_setting_phone_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_75dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_measure_30dp"
        android:paddingRight="@dimen/common_measure_20dp" >

        <ImageView
            android:layout_width="@dimen/common_measure_26dp"
            android:layout_height="@dimen/common_measure_26dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/account_setting_logo4" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机号码"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_22dp" />

        <TextView
            android:id="@+id/account_setting_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:textSize="@dimen/common_measure_18dp"
            android:textColor="@color/edittext_hint_color" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:background="@color/edittext_line_color" />
    
    <!-- 登录密码 -->
    <LinearLayout
        android:id="@+id/account_setting_login_pwd_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_75dp"
        android:background="@drawable/long_btn_click_selector"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_measure_30dp"
        android:paddingRight="@dimen/common_measure_20dp" >

        <ImageView
            android:layout_width="@dimen/common_measure_26dp"
            android:layout_height="@dimen/common_measure_26dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/account_setting_logo5" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="登录密码"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_22dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/my_account_arrow"
            android:scaleType="fitCenter" />
    </LinearLayout>
    
    <View
        android:id="@+id/account_setting_activity_line2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color"
        android:visibility="gone" />
    
    <!-- 交易密码 -->
    <LinearLayout
        android:id="@+id/account_setting_trans_pwd_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_75dp"
        android:background="@drawable/long_btn_click_selector"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_measure_30dp"
        android:paddingRight="@dimen/common_measure_20dp"
        android:visibility="gone" >

        <ImageView
            android:layout_width="@dimen/common_measure_26dp"
            android:layout_height="@dimen/common_measure_26dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/account_setting_logo6" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="提现密码"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_22dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/my_account_arrow"
            android:scaleType="fitCenter" />
    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color" />
    
    <!-- 手势密码 -->
    <LinearLayout
        android:id="@+id/account_setting_gesture_pwd_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_75dp"
        android:background="@drawable/long_btn_click_selector"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_measure_30dp"
        android:paddingRight="@dimen/common_measure_20dp" >

        <ImageView
            android:layout_width="@dimen/common_measure_26dp"
            android:layout_height="@dimen/common_measure_26dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/account_setting_logo7" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手势密码"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_22dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/my_account_arrow"
            android:scaleType="fitCenter" />
    </LinearLayout>
    
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:background="@color/edittext_line_color" />
    
    <!-- 收货地址 -->
    <LinearLayout
        android:id="@+id/account_setting_address_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_75dp"
        android:background="@drawable/long_btn_click_selector"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_measure_30dp"
        android:paddingRight="@dimen/common_measure_20dp" >

        <ImageView
            android:layout_width="@dimen/common_measure_26dp"
            android:layout_height="@dimen/common_measure_26dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/account_setting_logo8" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="收货地址"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_22dp" />
        
        <TextView 
            android:id="@+id/account_setting_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/common_measure_10dp"
            android:layout_gravity="right|center_vertical"
            android:text="未设置"
            android:textSize="@dimen/common_measure_18dp"
            android:textColor="@color/edittext_hint_color"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/my_account_arrow"
            android:scaleType="fitCenter" />
    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color" />
</LinearLayout>