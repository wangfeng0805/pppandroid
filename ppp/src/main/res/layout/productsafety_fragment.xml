<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_measure_18dp"
        android:layout_marginRight="@dimen/common_measure_18dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/borrow_details_icon5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_5dp"
            android:text="资金安全"
            android:textColor="@color/gray1"
            android:textSize="@dimen/common_measure_20dp" />
    </LinearLayout>

    <!-- 资金用途 -->

    <TextView
        android:id="@+id/productsafety_fragment_zjaq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:layout_marginLeft="@dimen/common_measure_18dp"
        android:layout_marginRight="@dimen/common_measure_18dp"
        android:text="投资者和融资者资金存于第三方支付资金托管平台的托管账户中，与平台完全隔离，平台不设资金池。"
        android:textColor="@color/gray1"
        android:textSize="@dimen/common_measure_18dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_measure_18dp"
        android:layout_marginRight="@dimen/common_measure_18dp"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/borrow_details_icon2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_5dp"
            android:text="资产安全"
            android:textColor="@color/gray1"
            android:textSize="@dimen/common_measure_20dp" />
    </LinearLayout>

    <!-- 融资介绍 -->

    <TextView
        android:id="@+id/productsafety_fragment_zcaq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_measure_18dp"
        android:layout_marginRight="@dimen/common_measure_18dp"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:textColor="@color/gray1"
        android:textSize="@dimen/common_measure_18dp" />

</LinearLayout>