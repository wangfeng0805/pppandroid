<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >

    <!-- 交易记录  元信宝 -->
    <include 
        android:id="@+id/yxb_trans_record_activity_toplayout"
        layout="@layout/common_topbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <com.ylfcf.ppp.widget.PagerSlidingTabStrip
            android:id="@+id/yxb_trans_record_activity_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_55dp"
            android:background="@color/white" />

        <android.support.v4.view.ViewPager
            android:id="@+id/yxb_trans_record_activity_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/yxb_trans_record_activity_tab" />
    </RelativeLayout>
    
</LinearLayout>