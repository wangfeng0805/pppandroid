<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >

    <include layout="@layout/common_topbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_60dp"
        android:layout_marginLeft="@dimen/common_measure_60dp"
        android:layout_marginRight="@dimen/common_measure_60dp"
        android:layout_marginTop="@dimen/common_measure_50dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/recharge_result_img"
            android:layout_width="@dimen/common_measure_49dp"
            android:layout_height="@dimen/common_measure_56dp"
            android:src="@drawable/recharge_result_logo" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/recharge_result_prompttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="操作成功，充值订单正在处理..."
                android:textColor="@color/green1"
                android:textSize="@dimen/common_measure_22dp" />

            <TextView
                android:id="@+id/recharge_result_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/green1"
                android:textSize="@dimen/common_measure_18dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:layout_marginLeft="@dimen/common_measure_80dp"
        android:layout_marginRight="@dimen/common_measure_80dp"
        android:layout_marginTop="@dimen/common_measure_5dp"
        android:background="@color/green1" />

    <LinearLayout
        android:id="@+id/recharge_result_money_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值金额："
            android:textColor="@color/gray1"
            android:textSize="@dimen/common_measure_20dp" />

        <TextView
            android:id="@+id/recharge_result_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/orange_text"
            android:textSize="@dimen/common_measure_20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="@color/gray1"
            android:textSize="@dimen/common_measure_20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/recharge_result_invest_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_66dp"
        android:layout_marginTop="@dimen/common_measure_80dp"
        android:layout_marginLeft="@dimen/common_measure_20dp"
        android:layout_marginRight="@dimen/common_measure_20dp"
        android:background="@drawable/blue_fillet_btn_selector"
        android:text="立即投资"
        android:textColor="@color/white"
        android:textSize="@dimen/common_measure_26dp" />
    
    <Button
        android:id="@+id/recharge_result_proof_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_66dp"
        android:layout_marginTop="@dimen/common_measure_20dp"
        android:layout_marginLeft="@dimen/common_measure_20dp"
        android:layout_marginRight="@dimen/common_measure_20dp"
        android:background="@drawable/blue_fillet_btn_selector"
        android:text="查看转账凭证"
        android:textColor="@color/white"
        android:textSize="@dimen/common_measure_26dp" />
    

</LinearLayout>