<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/product_data_gridview_item_imageview"
            android:layout_width="@dimen/common_measure_210dp"
            android:layout_height="@dimen/common_measure_286dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/style_rect_gray"
            android:padding="@dimen/common_measure_1dp"
            android:scaleType="fitXY" />
        
        <TextView 
            android:id="@+id/product_data_gridview_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_trans"
            android:singleLine="true"
            android:gravity="center"
            android:text="材料"
            android:textColor="@color/white"
            android:textSize="@dimen/common_measure_20dp"/>
        
    </RelativeLayout>
    
</RelativeLayout>
