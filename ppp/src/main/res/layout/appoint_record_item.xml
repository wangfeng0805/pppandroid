<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/common_measure_5dp"
        android:paddingTop="@dimen/common_measure_5dp" >

        <TextView
            android:id="@+id/appoint_record_item_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_18dp" />

        <TextView
            android:id="@+id/appoint_record_item_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_18dp" />

        <TextView
            android:id="@+id/appoint_record_item_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_18dp" />
    </LinearLayout>

</LinearLayout>