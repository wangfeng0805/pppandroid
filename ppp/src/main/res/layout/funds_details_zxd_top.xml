<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_measure_160dp"
    android:background="@color/white"
    android:orientation="horizontal" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1">
        
        <LinearLayout 
            android:id="@+id/funds_details_zxd_top_lin1"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="@dimen/common_measure_35dp">
            
            <ImageView 
                android:layout_width="@dimen/common_measure_28dp"
                android:layout_height="@dimen/common_measure_28dp"
                android:scaleType="fitCenter"
                android:background="@drawable/total_invest_logo"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_measure_6dp"
                android:text="累计投资（元）"
                android:textColor="@color/gray1"
                android:textSize="@dimen/common_measure_18dp"/>
            
        </LinearLayout>
        
        <!-- 累计投资 -->
        <TextView 
            android:id="@+id/funds_details_zxd_top_invest_total_money"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/funds_details_zxd_top_lin1"
            android:text="0.00"
            android:textSize="@dimen/common_measure_36dp"
            android:textColor="@color/common_topbar_bg_color"/>
        
    </RelativeLayout>
    
    <View 
        android:layout_width="@dimen/common_measure_2dp"
        android:layout_height="fill_parent"
        android:background="@color/transparent"/>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1">
        
        <LinearLayout 
            android:id="@+id/funds_details_zxd_top_lin2"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_35dp"
            android:gravity="center">
            
            <ImageView 
                android:layout_width="@dimen/common_measure_28dp"
                android:layout_height="@dimen/common_measure_28dp"
                android:scaleType="fitCenter"
                android:background="@drawable/total_interest_logo"/>
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_measure_6dp"
                android:text="累计收益（元）"
                android:textColor="@color/gray1"
                android:textSize="@dimen/common_measure_18dp"/>
            
        </LinearLayout>
        
        <!-- 累计收益-->
        <TextView 
            android:id="@+id/funds_details_zxd_top_interest_total_money"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/funds_details_zxd_top_lin2"
            android:text="0.00"
            android:textSize="@dimen/common_measure_36dp"
            android:textColor="@color/common_topbar_bg_color"/>
        
    </RelativeLayout>

</LinearLayout>
