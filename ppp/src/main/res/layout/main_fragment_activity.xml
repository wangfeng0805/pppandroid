<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_fragment_activity_mainlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <com.ylfcf.ppp.widget.NoScrollViewPager
            android:id="@+id/main_fragment_activity_viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/main_fragment_toplayout"
            android:layout_weight="1" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_1dp"
            android:background="@color/edittext_line_color" />

        <com.ylfcf.ppp.widget.NavigationBarView
            android:id="@+id/main_navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_68dp" >
        </com.ylfcf.ppp.widget.NavigationBarView>
    </LinearLayout>
</RelativeLayout>