<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_144dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/common_measure_4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/first_page_subject_xsb_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/common_measure_2dp"
            android:layout_weight="1"
            android:src="@drawable/first_page_subject_xsb_img"/>

        <ImageView
            android:id="@+id/first_page_subject_yyy_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/common_measure_2dp"
            android:layout_weight="1"
            android:src="@drawable/first_page_subject_yyy_img"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_141dp">

        <ImageView
            android:id="@+id/first_page_subject_yzy_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_141dp"
            android:scaleType="fitXY"
            android:src="@drawable/first_page_subject_yzy_img"/>

        <com.ant.liao.GifView
            android:id="@+id/first_page_subject_xsb_gif"
            android:layout_width="@dimen/common_measure_63dp"
            android:layout_height="@dimen/common_measure_54dp"
            android:layout_marginRight="@dimen/common_measure_30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="visible"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/first_page_subject_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_measure_5dp"
        android:layout_marginBottom="@dimen/common_measure_5dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/first_page_subject_xsb_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="PPP领域，您的投资优选"
                android:textColor="@color/black"
                android:textSize="@dimen/common_measure_20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/common_measure_5dp"
                android:text="了解更多>>"
                android:textColor="@color/common_topbar_bg_color"
                android:textSize="@dimen/common_measure_16dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/common_measure_66dp"
            android:layout_height="@dimen/common_measure_69dp"
            android:layout_marginLeft="@dimen/common_measure_60dp"
            android:layout_marginRight="@dimen/common_measure_30dp"
            android:src="@drawable/first_page_subject_huojian_img"
            android:scaleType="fitXY"/>

    </LinearLayout>
    
</LinearLayout>
