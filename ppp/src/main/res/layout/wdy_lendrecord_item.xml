<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_measure_40dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_40dp"
        android:background="@color/white"
        android:orientation="horizontal" >
        
        <View 
            android:layout_width="@dimen/common_measure_1dp"
            android:layout_height="match_parent"
            android:background="@color/edittext_line_color"/>

        <!-- 计划加入日期 -->
        <TextView
            android:id="@+id/wdy_lendrecord_item_plandate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/gray1"
            android:textSize="@dimen/common_measure_16dp" />
        
        <View 
            android:layout_width="@dimen/common_measure_1dp"
            android:layout_height="match_parent"
            android:background="@color/edittext_line_color"/>

        <!-- 实际加入日期 -->

        <TextView
            android:id="@+id/wdy_lendrecord_item_realdate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/gray1"
            android:textSize="@dimen/common_measure_16dp" />
        
        <View 
            android:layout_width="@dimen/common_measure_1dp"
            android:layout_height="match_parent"
            android:background="@color/edittext_line_color"/>

        <!-- 加入金额 -->

        <TextView
            android:id="@+id/wdy_lendrecord_item_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/gray1"
            android:textSize="@dimen/common_measure_16dp" />
        
        <View 
            android:layout_width="@dimen/common_measure_1dp"
            android:layout_height="match_parent"
            android:background="@color/edittext_line_color"/>

        <!-- 操作 -->

        <TextView
            android:id="@+id/wdy_lendrecord_item_option"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray1"
            android:textSize="@dimen/common_measure_16dp" />
        
        <View 
            android:layout_width="@dimen/common_measure_1dp"
            android:layout_height="match_parent"
            android:background="@color/edittext_line_color"/>

    </LinearLayout>

</LinearLayout>
