<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guoqing_jiaxi_window"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/guoqing_jiaxi_popwindow_delete"
        android:layout_width="@dimen/common_measure_25dp"
        android:layout_height="@dimen/common_measure_25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/common_measure_8dp"
        android:layout_marginTop="@dimen/common_measure_8dp"
        android:src="@drawable/delete_btn" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/common_measure_20dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/guoqing_jiaxi_popwindow_jiaxi_btn"
            android:layout_width="@dimen/common_measure_105dp"
            android:layout_height="@dimen/common_measure_27dp"
            android:layout_marginRight="@dimen/common_measure_10dp"
            android:background="@drawable/guoqing_jiaxibtn_selector"/>

        <Button
            android:id="@+id/guoqing_jiaxi_popwindow_catdetails_btn"
            android:layout_width="@dimen/common_measure_105dp"
            android:layout_height="@dimen/common_measure_27dp"
            android:layout_marginLeft="@dimen/common_measure_10dp"
            android:background="@drawable/guoqing_jiaxi_details_selector"/>
        
    </LinearLayout>

</RelativeLayout>