<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/borrowlist_activity_toplayout" >

        <com.ylfcf.ppp.widget.PagerSlidingTabStrip
            android:id="@+id/project_classify_dq_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_45dp"
            android:background="@color/white" />

        <android.support.v4.view.ViewPager
            android:id="@+id/project_classify_dq_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/project_classify_dq_tab" />
    </RelativeLayout>
    

</LinearLayout>
