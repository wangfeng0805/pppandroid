<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_86dp">

        <TextView
            android:id="@+id/tv_number"
            android:text="19"
            android:textColor="@color/gray4"
            android:layout_marginRight="@dimen/common_measure_50dp"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:textSize="@dimen/common_measure_18dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title"
                android:text="w********8"
                android:textColor="@color/gray5"
                android:layout_marginTop="@dimen/common_measure_12dp"
                android:layout_marginBottom="@dimen/common_measure_5dp"
                android:textSize="@dimen/common_measure_20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_time"
                android:text="2018-8-8 12:00:00"
                android:textColor="@color/gray4"
                android:textSize="@dimen/common_measure_18dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_money"
            android:text="100å…ƒ"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:textColor="@color/gray4"
            android:textSize="@dimen/common_measure_18dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@color/edittext_line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_1dp"/>


</LinearLayout>