<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_150dp"
        android:layout_marginTop="@dimen/common_measure_6dp"
        android:background="@drawable/style_rect_gray"
        android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_measure_15dp"
                android:textColor="@color/black"
                android:text="金额（元）："
                android:textSize="@dimen/common_measure_20dp"
                android:gravity="center_vertical"/>
            
            <TextView 
                android:id="@+id/yxb_trans_record_item_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/orange_text"
                android:textSize="@dimen/common_measure_22dp"
                android:gravity="center_vertical"/>
            
        </LinearLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_1dp"
            android:background="@color/edittext_line_color"/>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="日期"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/common_measure_18dp"
                    android:gravity="center"/>
                
                <TextView 
                    android:id="@+id/yxb_trans_record_item_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_20dp"
                    android:gravity="center"/>
                
            </LinearLayout>
            
            <View 
                android:layout_width="@dimen/common_measure_1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:layout_marginBottom="@dimen/common_measure_10dp"
                android:background="@color/edittext_line_color"/>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="类型"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/common_measure_18dp"
                    android:gravity="center"/>
                
                <TextView 
                    android:id="@+id/yxb_trans_record_item_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_20dp"
                    android:gravity="center"/>
                
            </LinearLayout>
            
            <View 
                android:layout_width="@dimen/common_measure_1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:layout_marginBottom="@dimen/common_measure_10dp"
                android:background="@color/edittext_line_color"/>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="状态"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/common_measure_18dp"
                    android:gravity="center"/>
                
                <TextView 
                    android:id="@+id/yxb_trans_record_item_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_20dp"
                    android:gravity="center"/>
                
            </LinearLayout>
            
            <View 
                android:layout_width="@dimen/common_measure_1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:layout_marginBottom="@dimen/common_measure_10dp"
                android:background="@color/edittext_line_color"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
