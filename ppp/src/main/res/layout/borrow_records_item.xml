<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_measure_60dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_60dp"
        android:orientation="horizontal" >

        <!-- 投资者 -->
        <TextView
            android:id="@+id/borrow_records_item_investor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/gray1"
            android:textSize="@dimen/common_measure_18dp" />

        <!-- 投资类型 -->

        <TextView
            android:id="@+id/borrow_records_item_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/gray1"
            android:textSize="@dimen/common_measure_18dp" />

        <!-- 投资金额 -->

        <TextView
            android:id="@+id/borrow_records_item_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/gray1"
            android:textSize="@dimen/common_measure_18dp" />

        <!-- 投资时间 -->

        <TextView
            android:id="@+id/borrow_records_item_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/gray1"
            android:textSize="@dimen/common_measure_18dp" />

    </LinearLayout>

</LinearLayout>
