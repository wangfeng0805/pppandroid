<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_rect_fillet_filling_white"
        android:layout_marginLeft="@dimen/common_measure_20dp"
        android:layout_marginRight="@dimen/common_measure_20dp"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:padding="@dimen/common_measure_20dp">

        <LinearLayout
            android:id="@+id/prize_listview_item_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/prize_listview_item_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_20dp" />

            <!-- android:textIsSelectable="true"	
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="none" -->
            <TextView
                android:id="@+id/prize_listview_item_ticket"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:textColor="@color/gray1"
                android:textSize="@dimen/common_measure_18dp"
                android:textIsSelectable="true"	
                android:visibility="gone" />

            <TextView
                android:id="@+id/prize_listview_item_endtime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_5dp"
                android:textColor="@color/gray1"
                android:textSize="@dimen/common_measure_18dp" />
            
            <TextView
                android:id="@+id/prize_listview_item_remark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_5dp"
                android:textColor="@color/gray1"
                android:textSize="@dimen/common_measure_18dp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/prize_listview_item_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            
            <TextView 
            android:id="@+id/prize_listview_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/common_measure_18dp"
            android:textColor="@color/orange_text"
            android:gravity="center_vertical"/>
            
            <TextView 
                android:id="@+id/prize_listview_item_unit"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textSize="@dimen/common_measure_18dp"
            	android:textColor="@color/gray1"
            	android:gravity="center_vertical"/>
            
        </LinearLayout>

        <Button
            android:id="@+id/prize_listview_item_catdetails_btn"
            android:layout_width="@dimen/common_measure_120dp"
            android:layout_height="@dimen/common_measure_40dp"
            android:layout_marginTop="@dimen/common_measure_10dp"
            android:layout_below="@+id/prize_listview_item_layout1"
            android:background="@drawable/blue_btn_selector"
            android:text="了解详情"
            android:textSize="@dimen/common_measure_18dp"
            android:textColor="@color/white"
            android:visibility="gone"/>
        
    </RelativeLayout>
    
</LinearLayout>