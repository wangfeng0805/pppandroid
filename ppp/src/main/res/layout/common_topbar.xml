<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/common_measure_67dp"
    android:background="@color/common_topbar_bg_color"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/common_topbar_left_layout"
        android:layout_width="@dimen/common_measure_100dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

	    <ImageView
	        android:layout_width="@dimen/common_measure_17dp"
	        android:layout_height="@dimen/common_measure_30dp"
	        android:layout_marginLeft="@dimen/common_measure_20dp"
	        android:scaleType="centerInside"
	        android:background="@drawable/common_topbar_left_btn_selector" />
	    
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/common_topbar_center_licai"
        android:layout_width="@dimen/common_measure_190dp"
        android:layout_height="@dimen/common_measure_40dp"
        android:background="@drawable/style_rect_fillet_filling_white_3dp"
        android:layout_centerInParent="true"
        android:visibility="gone">
        
        <Button 
            android:id="@+id/common_topbar_hq_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/common_measure_1dp"
            android:layout_weight="1"
            android:background="@drawable/style_rect_fillet_filling_blue_left_3dp"
            android:text="活期"
            android:textSize="@dimen/common_measure_20dp"
            android:textColor="@color/white"/>
        
        <Button 
            android:id="@+id/common_topbar_dq_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/common_measure_1dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="定期"
            android:textSize="@dimen/common_measure_20dp"
            android:textColor="@color/common_topbar_bg_color"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/common_topbar_center"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

   	    <TextView
   	        android:id="@+id/common_page_title"
	       	android:layout_width="wrap_content"
        	android:layout_height="fill_parent"
            android:gravity="center"
       		android:textColor="@color/white"
            android:textSize="@dimen/common_measure_26dp"/>
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_measure_20dp">
        
        <ImageView 
        	android:id="@+id/common_topbar_right"
        	android:layout_width="@dimen/common_measure_35dp"
        	android:layout_height="@dimen/common_measure_35dp"
        	android:src="@drawable/yxb_details_logo"
        	android:visibility="gone"/>
        
        <TextView 
            android:id="@+id/common_topbar_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/common_measure_22dp"
            android:text="红包规则"
            android:visibility="gone"/>
        
    </RelativeLayout>
    
</RelativeLayout>