<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_measure_23dp"
        android:paddingRight="@dimen/common_measure_23dp"
        android:paddingTop="@dimen/common_measure_23dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_measure_60dp"
                android:layout_marginRight="@dimen/common_measure_60dp"
                android:background="@color/edittext_line_color" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/forget_pwd_top_step1"
                        android:layout_width="@dimen/common_measure_35dp"
                        android:layout_height="@dimen/common_measure_35dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/style_circle_blue"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_measure_18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/forget_pwd_top_step2"
                        android:layout_width="@dimen/common_measure_35dp"
                        android:layout_height="@dimen/common_measure_35dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/style_circle_gray"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_measure_18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/forget_pwd_top_step3"
                        android:layout_width="@dimen/common_measure_35dp"
                        android:layout_height="@dimen/common_measure_35dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/style_circle_gray"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_measure_18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/forget_pwd_top_step4"
                        android:layout_width="@dimen/common_measure_35dp"
                        android:layout_height="@dimen/common_measure_35dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/style_circle_gray"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textSize="@dimen/common_measure_18dp" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/forget_pwd_bottom_step1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="输入手机号"
                android:textColor="@color/blue1"
                android:textSize="@dimen/common_measure_18dp" />

            <TextView
                android:id="@+id/forget_pwd_bottom_step2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="验证身份"
                android:textColor="@color/gray2"
                android:textSize="@dimen/common_measure_18dp" />

            <TextView
                android:id="@+id/forget_pwd_bottom_step3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="重置密码"
                android:textColor="@color/gray2"
                android:textSize="@dimen/common_measure_18dp" />

            <TextView
                android:id="@+id/forget_pwd_bottom_step4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/gray2"
                android:textSize="@dimen/common_measure_18dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!-- 输入手机号码 -->

        <LinearLayout
            android:id="@+id/forget_pwd_phonenum_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_77dp"
                android:layout_marginBottom="@dimen/common_measure_30dp"
                android:layout_marginLeft="@dimen/common_measure_23dp"
                android:layout_marginRight="@dimen/common_measure_23dp"
                android:layout_marginTop="@dimen/common_measure_36dp"
                android:background="@drawable/style_rect_fillet_filling_edit_white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/common_measure_26dp"
                    android:layout_height="@dimen/common_measure_27dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/common_measure_7dp"
                    android:src="@drawable/login_edit_icon_phone" />

                <EditText
                    android:id="@+id/forget_pwd_phonenum_et"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/common_measure_20dp"
                    android:background="@null"
                    android:hint=" 请输入注册手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/common_measure_20dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/child_background"
                android:paddingTop="@dimen/common_measure_40dp" >

                <Button
                    android:id="@+id/forget_pwd_phonenum_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_measure_68dp"
                    android:layout_marginLeft="@dimen/common_measure_23dp"
                    android:layout_marginRight="@dimen/common_measure_23dp"
                    android:layout_marginBottom="@dimen/common_measure_40dp"
                    android:background="@drawable/blue_fillet_btn_selector"
                    android:text="下一步"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_measure_26dp" />
            </RelativeLayout>
        </LinearLayout>

        <!-- 验证身份 -->

        <LinearLayout
            android:id="@+id/forget_pwd_check_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_measure_23dp"
                android:paddingRight="@dimen/common_measure_23dp"
                android:paddingTop="@dimen/common_measure_36dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_measure_77dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_rect_fillet_filling_edit_white"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/common_measure_26dp"
                        android:layout_height="@dimen/common_measure_27dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/common_measure_7dp"
                        android:src="@drawable/login_edit_icon_phone" />

                    <EditText
                        android:id="@+id/forget_pwd_check_et"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/common_measure_20dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/edittext_hint_color"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/common_measure_20dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/forget_pwd_get_authnum_btn"
                    android:layout_width="@dimen/common_measure_150dp"
                    android:layout_height="@dimen/common_measure_58dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/common_measure_10dp"
                    android:background="@drawable/blue_fillet_btn_selector"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_measure_24dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/forget_pwd_activity_prompt_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/common_measure_23dp"
                android:paddingRight="@dimen/common_measure_23dp"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码已发送至"
                    android:textColor="@color/gray2"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/forget_pwd_activity_prompt_phonenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue1"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="，"
                    android:textColor="@color/gray2"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5分钟"
                    android:textColor="@color/blue1"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内输入有效。"
                    android:textColor="@color/gray2"
                    android:textSize="@dimen/common_measure_18dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_30dp"
                android:background="@color/child_background"
                android:paddingTop="@dimen/common_measure_40dp">

                <Button
                    android:id="@+id/forget_pwd_check_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_measure_68dp"
                    android:layout_marginLeft="@dimen/common_measure_23dp"
                    android:layout_marginRight="@dimen/common_measure_23dp"
                    android:layout_marginBottom="@dimen/common_measure_40dp"
                    android:background="@drawable/blue_fillet_btn_selector"
                    android:text="下一步"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_measure_26dp" />
            </RelativeLayout>
        </LinearLayout>

        <!-- 重置密码 -->

        <LinearLayout
            android:id="@+id/forget_pwd_reset_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_77dp"
                android:layout_marginLeft="@dimen/common_measure_23dp"
                android:layout_marginRight="@dimen/common_measure_23dp"
                android:layout_marginTop="@dimen/common_measure_36dp"
                android:background="@drawable/style_rect_fillet_filling_edit_white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/common_measure_26dp"
                    android:layout_height="@dimen/common_measure_27dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/common_measure_7dp"
                    android:src="@drawable/login_edit_icon_password" />

                <EditText
                    android:id="@+id/forget_pwd_reset_newpwd_input"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/common_measure_20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入新密码"
                    android:maxLength="16"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/common_measure_20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_77dp"
                android:layout_marginLeft="@dimen/common_measure_23dp"
                android:layout_marginRight="@dimen/common_measure_23dp"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:background="@drawable/style_rect_fillet_filling_edit_white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/common_measure_26dp"
                    android:layout_height="@dimen/common_measure_27dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/common_measure_7dp"
                    android:src="@drawable/login_edit_icon_password" />

                <EditText
                    android:id="@+id/forget_pwd_reset_newpwd_ensure"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/common_measure_20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请确认新密码"
                    android:maxLength="16"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/edittext_hint_color"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/common_measure_20dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_30dp"
                android:background="@color/child_background"
                android:paddingTop="@dimen/common_measure_40dp">

                <Button
                    android:id="@+id/forget_pwd_reset_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_measure_68dp"
                    android:layout_marginLeft="@dimen/common_measure_23dp"
                    android:layout_marginRight="@dimen/common_measure_23dp"
                    android:layout_marginBottom="@dimen/common_measure_40dp"
                    android:background="@drawable/blue_fillet_btn_selector"
                    android:text="提交修改"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_measure_26dp" />
            </RelativeLayout>
        </LinearLayout>

        <!-- 完成 -->

        <LinearLayout
            android:id="@+id/forget_pwd_finish_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/common_measure_45dp"
                android:layout_marginLeft="@dimen/common_measure_23dp"
                android:layout_marginRight="@dimen/common_measure_23dp"
                android:layout_marginTop="@dimen/common_measure_60dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/common_measure_45dp"
                    android:layout_height="@dimen/common_measure_45dp"
                    android:src="@drawable/duihao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/common_measure_10dp"
                    android:gravity="center_vertical"
                    android:text="恭喜你，密码重置成功！"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_20dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/child_background"
                android:layout_marginTop="@dimen/common_measure_30dp"
                android:paddingTop="@dimen/common_measure_40dp" >

                <Button
                    android:id="@+id/forget_pwd_finish_loginbtn"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_measure_63dp"
                    android:layout_marginLeft="@dimen/common_measure_23dp"
                    android:layout_marginRight="@dimen/common_measure_23dp"
                    android:layout_marginBottom="@dimen/common_measure_40dp"
                    android:background="@drawable/blue_fillet_btn_selector"
                    android:text="立即登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_measure_26dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>