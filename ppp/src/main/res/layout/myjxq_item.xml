<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:paddingTop="@dimen/common_measure_10dp"
        android:paddingBottom="@dimen/common_measure_10dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/style_rect_fillet_filling_white">
        
        <!-- 额度 -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/common_measure_32dp"
                android:layout_height="@dimen/common_measure_32dp"
                android:src="@drawable/jxq_bg" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_measure_5dp"
                android:text="加息：" 
                android:textSize="@dimen/common_measure_18dp"
                android:textColor="@color/gray"/>
            
            <TextView 
                android:id="@+id/myjxq_item_jiaxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/common_measure_30dp"
                android:textColor="@color/orange_text"/>
            
            <Button 
                android:id="@+id/myjxq_list_item_btn"
                android:layout_width="@dimen/common_measure_100dp"
                android:layout_height="@dimen/common_measure_30dp"
                android:gravity="center"
                android:text="立即使用"
                android:textColor="@color/common_topbar_bg_color"
                android:textSize="@dimen/common_measure_16dp"
                android:background="@drawable/style_rect_fillet_blue"
                android:visibility="gone"/>
            
        </LinearLayout>
        
        <!-- 适用范围 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:layout_marginTop="@dimen/common_measure_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="适用范围："
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_18dp"/>

            <TextView
                android:id="@+id/myjxq_item_syfw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/common_measure_6dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:layout_marginTop="@dimen/common_measure_5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期："
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_18dp"/>

            <!-- 有效期 -->
            <TextView
                android:id="@+id/myjxq_item_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/common_measure_6dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_18dp"/>

        </LinearLayout>

        <!-- 使用限制 -->
        <TextView 
            android:id="@+id/myjxq_item_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:layout_marginTop="@dimen/common_measure_5dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_18dp"/>
        
        <!-- 备注 -->
        <TextView 
            android:id="@+id/myjxq_item_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:layout_marginTop="@dimen/common_measure_5dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_18dp"/>

        <!-- 加息券接收人 -->
        <TextView
            android:id="@+id/myjxq_item_receiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:layout_marginTop="@dimen/common_measure_5dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_18dp"
            android:visibility="gone"/>

        <!-- 加息券来源 -->
        <TextView
            android:id="@+id/myjxq_item_fromwhere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:layout_marginTop="@dimen/common_measure_5dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_18dp"
            android:visibility="gone"/>
        
    </LinearLayout>

</LinearLayout>

