<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- 2017年 开年红 乐享返现 领取加息券 -->
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_260dp"
        android:background="@drawable/style_rect_fillet_filling_white_dialog"
        android:orientation="vertical">
        
	    <ImageView 
	        android:id="@+id/lxfx_dialog_layout_delbtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="@dimen/common_measure_10dp"
	        android:layout_marginTop="@dimen/common_measure_10dp"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentRight="true"
	        android:src="@drawable/delete_btn"/>
	    
	    <LinearLayout 
	        android:id="@+id/lxfx_dialog_layout_toptext_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/lxfx_dialog_layout_delbtn"
	        android:layout_marginTop="@dimen/common_measure_10dp"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="加息"
	            android:textSize="@dimen/common_measure_22dp"
	            android:textColor="@color/black"/>
	        
	        <TextView 
	            android:id="@+id/lxfx_dialog_layout_prizename"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="0.1%"
	            android:textSize="@dimen/common_measure_26dp"
	            android:textColor="@color/red"/>
	        
	        <TextView 
	            android:id="@+id/xcfl_prize_dialog_layout_unit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="加息券领取成功！"
	            android:textSize="@dimen/common_measure_22dp"
	            android:textColor="@color/black"/>
	        
	    </LinearLayout>
	    
	    <TextView 
	        android:id="@+id/lxfx_dialog_layout_prompt"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/lxfx_dialog_layout_toptext_layout"
	        android:layout_marginTop="@dimen/common_measure_10dp"
	        android:gravity="center_horizontal"
	        android:textColor="@color/gray"
	        android:textSize="@dimen/common_measure_18dp"
	        android:text="亲，要记得使用哦~"/>
	    
	    <LinearLayout 
	        android:id="@+id/lxfx_dialog_layout_btn_layout"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/common_measure_70dp"
	        android:layout_below="@+id/lxfx_dialog_layout_prompt"
	        android:layout_marginTop="@dimen/common_measure_30dp"
	        android:gravity="center_horizontal"
	        android:orientation="horizontal">
	        
	        <Button 
	            android:id="@+id/lxfx_dialog_layout_leftBtn"
	            android:layout_width="@dimen/common_measure_140dp"
	            android:layout_height="@dimen/common_measure_40dp"
	            android:layout_marginRight="@dimen/common_measure_5dp"
	            android:background="@drawable/style_rect_fillet_filling_red1"
	            android:text="查看领取记录"
	            android:textColor="@color/white"
	            android:textSize="@dimen/common_measure_20dp"/>
	        
	        <Button 
	            android:id="@+id/lxfx_dialog_layout_rightBtn"
	            android:layout_width="@dimen/common_measure_140dp"
	            android:layout_height="@dimen/common_measure_40dp"
	            android:layout_marginLeft="@dimen/common_measure_5dp"
	            android:background="@drawable/style_rect_fillet_gray1"
	            android:text="知道了"
	            android:textColor="@color/gray"
	            android:textSize="@dimen/common_measure_20dp"/>
	        
	    </LinearLayout>
	    
	</RelativeLayout>

</LinearLayout>
