<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >
    
    <include
        layout="@layout/common_topbar" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.ylfcf.ppp.widget.PagerSlidingTabStrip
            android:id="@+id/article_list_activity_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_55dp" 
            android:background="@color/white"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/article_list_activity_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/article_list_activity_tab" />
    </RelativeLayout>
    
</LinearLayout>
