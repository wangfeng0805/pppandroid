<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:background="@drawable/style_rect_filling_click_selector"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_75dp"
            android:layout_marginBottom="@dimen/common_measure_10dp"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/invest_records_lczq_item_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <!-- 标的名字 -->

                <TextView
                    android:id="@+id/invest_records_lczq_item_borrowname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_measure_15dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_22dp" />

                <TextView
                    android:id="@+id/invest_records_lczq_item_investtype"
                    android:layout_width="@dimen/common_measure_60dp"
                    android:layout_height="@dimen/common_measure_30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/style_rect_fillet_filling_orange"
                    android:gravity="center"
                    android:text="首投"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_measure_18dp" />

                <ImageView
                    android:layout_width="@dimen/common_measure_10dp"
                    android:layout_height="@dimen/common_measure_18dp"
                    android:layout_marginLeft="@dimen/common_measure_10dp"
                    android:layout_marginRight="@dimen/common_measure_10dp"
                    android:src="@drawable/my_account_arrow" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invest_records_lczq_item_layout1"
                android:layout_marginLeft="@dimen/common_measure_15dp"
                android:layout_marginRight="@dimen/common_measure_15dp"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:orientation="horizontal" >

                <!-- 首投日 -->

                <TextView
                    android:id="@+id/invest_records_lczq_item_firsttime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="首投日："
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />
                <!-- 下期加入日 -->

                <TextView
                    android:id="@+id/invest_records_lczq_item_nexttime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="下期加入日："
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_1dp"
            android:background="@color/edittext_line_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_75dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/invest_lczq_records_item_firstmoneytitle"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:text="首投本金"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_record_lczq_item_firstmoney"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:text="累计出借"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_record_lczq_item_totalbidmoney"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:text="累计延期"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_record_lczq_item_yanqi_days"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/invest_lczq_records_item_interestmoney_title"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:text="预期收益"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_record_lczq_item_interestmoney"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/common_topbar_bg_color"
                    android:textSize="@dimen/common_measure_16dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_1dp"
            android:background="@color/edittext_line_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_measure_75dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/invest_lczq_records_item_nhlltitle"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:text="本期年化利率"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_lczq_records_item_nhll"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:text="备注"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/invest_records_lczq_item_remark"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_measure_16dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_50dp"
            android:layout_marginTop="@dimen/common_measure_10dp"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/invest_record_lczq_item_catrecord"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_measure_40dp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/common_measure_10dp"
                android:layout_marginRight="@dimen/common_measure_10dp"
                android:background="@drawable/style_rect_fillet_filling_blue"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text="查看出借记录"
                android:textColor="@color/white"
                android:textSize="@dimen/common_measure_20dp" />

            <Button
                android:id="@+id/invest_record_lczq_item_catcompact"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_measure_40dp"
                android:layout_marginLeft="@dimen/common_measure_10dp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/common_measure_10dp"
                android:background="@drawable/style_rect_fillet_filling_blue"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:text="查看合同"
                android:textColor="@color/white"
                android:textSize="@dimen/common_measure_20dp" />
        </LinearLayout>

        <!-- <Button
            android:id="@+id/invest_record_lczq_item_bidbtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_40dp"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:layout_marginBottom="@dimen/common_measure_10dp"
            android:background="@drawable/style_rect_fillet_filling_blue"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="支付本期出借金额"
            android:textColor="@color/white"
            android:textSize="@dimen/common_measure_20dp" /> -->
    </LinearLayout>

</LinearLayout>