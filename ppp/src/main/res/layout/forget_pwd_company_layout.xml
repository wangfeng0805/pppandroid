<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_measure_20dp"
            android:paddingTop="@dimen/common_measure_20dp"
            android:paddingBottom="@dimen/common_measure_20dp"
            android:paddingLeft="@dimen/common_measure_10dp"
            android:paddingRight="@dimen/common_measure_10dp"
            android:background="@drawable/style_rect_fillet_filling_blue2"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_5dp"
                android:src="@drawable/prompt_logo2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_measure_5dp"
                android:text="企业客户请拨打服务热线：400-150-1568（工作日9:00-18:00）找回登录密码！"
                android:textColor="@color/common_topbar_bg_color"
                android:textSize="@dimen/common_measure_18dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/common_measure_288dp"
            android:layout_height="@dimen/common_measure_156dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/common_measure_20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/forgot_pwd_company_prompt" />
    </LinearLayout>

    <Button
        android:id="@+id/forgot_pwd_company_layout_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_63dp"
        android:layout_margin="@dimen/common_measure_20dp"
        android:background="@drawable/blue_fillet_btn_selector"
        android:text="知道了"
        android:textColor="@color/white"
        android:textSize="@dimen/common_measure_26dp" />

</LinearLayout>