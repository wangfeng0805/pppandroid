<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_rect_fillet_filling_white_dialog"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_130dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/borrow_detail_prompt_top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_24dp" />

        <TextView
            android:id="@+id/borrow_detail_prompt_bottom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_measure_10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_measure_20dp"
        android:layout_marginBottom="@dimen/common_measure_30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <!-- android:background="@drawable/style_rect_fillet_filling_blue" -->

        <Button
            android:id="@+id/borrow_detail_prompt_layout_leftbtn"
            android:layout_width="@dimen/common_measure_160dp"
            android:layout_height="@dimen/common_measure_50dp"
            android:layout_marginRight="@dimen/common_measure_8dp"
            android:background="@drawable/style_rect_fillet_blue"
            android:gravity="center"
            android:textColor="@color/common_topbar_bg_color"
            android:textSize="@dimen/common_measure_24dp" />

        <Button
            android:id="@+id/borrow_detail_prompt_layout_rightbtn"
            android:layout_width="@dimen/common_measure_160dp"
            android:layout_height="@dimen/common_measure_50dp"
            android:layout_marginLeft="@dimen/common_measure_8dp"
            android:background="@drawable/style_rect_fillet_filling_blue"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/common_measure_24dp" />
    </LinearLayout>

</LinearLayout>