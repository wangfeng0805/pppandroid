<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <!-- android:background="@drawable/style_rect_filling_click_selector" -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_measure_20dp"
        android:layout_marginRight="@dimen/common_measure_20dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_10dp"
            android:layout_marginRight="@dimen/common_measure_10dp"
            android:layout_marginTop="@dimen/common_measure_10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="@dimen/common_measure_30dp"
                    android:layout_height="@dimen/common_measure_30dp"
                    android:src="@drawable/account_setting_logo4" />

                <TextView
                    android:id="@+id/yqy_comp_friends_listview_item_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_measure_5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_measure_20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/yqy_comp_friends_listview_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="姓名: "
                android:textColor="@color/black"
                android:textSize="@dimen/common_measure_20dp" />
        </LinearLayout>

        <!-- layout_height必须大于shape 的height才可以显示出来 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_2dp"
            android:layout_marginBottom="@dimen/common_measure_10dp"
            android:layout_marginTop="@dimen/common_measure_5dp"
            android:background="@drawable/style_xuxian_gray"
            android:layerType="software" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_10dp"
            android:layout_marginRight="@dimen/common_measure_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/common_measure_17dp"
                android:textColor="@color/gray"
                android:text="投资标的: "/>

            <TextView
                android:id="@+id/yqy_comp_friends_listview_item_borrowname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="@dimen/common_measure_17dp"
                android:textColor="@color/gray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_10dp"
            android:layout_marginRight="@dimen/common_measure_10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:text="投资金额: "
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_17dp"/>

            <TextView
                android:id="@+id/yqy_comp_friends_listview_item_investmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:textColor="@color/orange_text"
                android:textSize="@dimen/common_measure_17dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_10dp"
            android:layout_marginRight="@dimen/common_measure_10dp"
            android:layout_marginBottom="@dimen/common_measure_5dp"
            android:orientation="horizontal" >

            <!-- 投资时间 -->
            <TextView
                android:id="@+id/yqy_comp_friends_listview_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_17dp" />

            <TextView
                android:id="@+id/yqy_comp_friends_listview_item_interest_starttime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:layout_weight="1"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_17dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>