<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_measure_13dp"
        android:layout_marginRight="@dimen/common_measure_13dp"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:background="@drawable/invest_recording"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_measure_28dp"
        android:paddingRight="@dimen/common_measure_20dp"
        android:paddingTop="@dimen/common_measure_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="商汇贷"
                android:textColor="@color/gray5"
                android:textSize="@dimen/common_measure_18dp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回款中"
                android:paddingTop="@dimen/common_measure_3dp"
                android:paddingBottom="@dimen/common_measure_3dp"
                android:paddingLeft="@dimen/common_measure_12dp"
                android:paddingRight="@dimen/common_measure_12dp"
                android:gravity="center"
                android:background="@drawable/style_rect_fillet_filling_orange2"
                android:textColor="@color/white"
                android:textSize="@dimen/common_measure_16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_measure_25dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出借金额: "
                    android:textColor="@color/gray5"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/tv_loan_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/prize_region_color1"
                    android:textSize="@dimen/common_measure_18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年利率: "
                    android:textColor="@color/gray5"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/tv_interest_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="1"
                    android:textColor="@color/prize_region_color1"
                    android:textSize="@dimen/common_measure_18dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_measure_12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出借日期: "
                    android:textColor="@color/gray5"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/tv_loan_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="1"
                    android:textColor="@color/prize_region_color1"
                    android:textSize="@dimen/common_measure_18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起息日: "
                    android:textColor="@color/gray5"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/tv_interest_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="1"
                    android:textColor="@color/prize_region_color1"
                    android:textSize="@dimen/common_measure_18dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_measure_12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每月回款: "
                    android:textColor="@color/gray5"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/tv_monthly_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="1"
                    android:textColor="@color/prize_region_color1"
                    android:textSize="@dimen/common_measure_18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出借期限: "
                    android:textColor="@color/gray5"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/tv_loan_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="1"
                    android:textColor="@color/prize_region_color1"
                    android:textSize="@dimen/common_measure_18dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/common_measure_10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_contract_see"
                android:layout_width="@dimen/common_measure_130dp"
                android:layout_marginRight="@dimen/common_measure_36dp"
                android:layout_height="@dimen/common_measure_36dp"
                android:background="@drawable/blue_fillet_btn_selector"
                android:text="查看合同"
                android:textColor="@color/white"
                android:textSize="@dimen/common_measure_16dp" />

            <Button
                android:id="@+id/btn_plan_see"
                android:layout_width="@dimen/common_measure_130dp"
                android:layout_height="@dimen/common_measure_36dp"
                android:background="@drawable/blue_fillet_btn_selector"
                android:text="回款计划"
                android:textColor="@color/white"
                android:textSize="@dimen/common_measure_16dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
