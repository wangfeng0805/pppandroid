<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_dark"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/common_measure_10dp"
        android:paddingBottom="@dimen/common_measure_10dp"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            android:text="年"
            android:textSize="@dimen/common_measure_20dp"/>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            android:text="月"
            android:textSize="@dimen/common_measure_20dp"/>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            android:text="日"
            android:textSize="@dimen/common_measure_20dp"/>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            android:text="时"
            android:textSize="@dimen/common_measure_20dp"/>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            android:text="分"
            android:textSize="@dimen/common_measure_20dp"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        
        <com.ylfcf.ppp.widget.WheelView 
            android:id="@+id/srzx_appoint_popwindow_wheel_year"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_200dp"
            android:layout_weight="1"/>
        
        <com.ylfcf.ppp.widget.WheelView 
            android:id="@+id/srzx_appoint_popwindow_wheel_month"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_200dp"
            android:layout_weight="1"/>
        
        <com.ylfcf.ppp.widget.WheelView 
            android:id="@+id/srzx_appoint_popwindow_wheel_day"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_200dp"
            android:layout_weight="1"/>
        
        <com.ylfcf.ppp.widget.WheelView 
            android:id="@+id/srzx_appoint_popwindow_wheel_hour"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_200dp"
            android:layout_weight="1"/>
        
        <com.ylfcf.ppp.widget.WheelView 
            android:id="@+id/srzx_appoint_popwindow_wheel_minute"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_200dp"
            android:layout_weight="1"/>
        
        <DatePicker 
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_600dp"
            android:calendarViewShown="true"
            android:layout_weight="1"
            android:visibility="gone"/>
        
    </LinearLayout>
    
</LinearLayout>
