<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >

    <include layout="@layout/common_topbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_measure_20dp"
        android:gravity="center_horizontal"
        android:text="签到表"
        android:textColor="@color/gray"
        android:textSize="@dimen/common_measure_20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_measure_20dp"
        android:layout_marginRight="@dimen/common_measure_20dp"
        android:background="@color/common_topbar_bg_color"
        android:orientation="vertical"
        android:padding="@dimen/common_measure_16dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/sign_activity_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3月"
                android:textColor="@color/white"
                android:textSize="@dimen/common_measure_18dp" />

            <LinearLayout
                android:id="@+id/sign_activity_sign_suc_prompt_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="今日签到成功！获得"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:id="@+id/sign_activity_sign_suc_prompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.1%加息券"
                    android:textColor="@color/red"
                    android:textSize="@dimen/common_measure_18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="一张！"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_measure_18dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_measure_16dp"
            android:paddingTop="@dimen/common_measure_10dp"
            android:paddingBottom="@dimen/common_measure_10dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="周日"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="周一"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="周二"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="周三"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="周四"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="周五"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="周六"
                android:textColor="@color/gray"
                android:textSize="@dimen/common_measure_20dp" />
        </LinearLayout>

        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_measure_3dp"
            android:background="@color/common_topbar_bg_color"/>
        
        <!-- @dimen/common_measure_235dp -->
        <GridView
            android:id="@+id/sign_activity_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_topbar_bg_color"
            android:horizontalSpacing="@dimen/common_measure_3dp"  
        	android:verticalSpacing="@dimen/common_measure_3dp"  
            android:numColumns="7" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_measure_20dp"
        android:layout_marginRight="@dimen/common_measure_20dp"
        android:layout_marginTop="@dimen/common_measure_20dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/prompt_logo2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_measure_5dp"
            android:text="天天签到，天天加息！"
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_18dp" />
    </LinearLayout>

    <Button
        android:id="@+id/sign_activity_cat_jxq_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_60dp"
        android:layout_margin="@dimen/common_measure_20dp"
        android:background="@drawable/style_rect_fillet_blue"
        android:gravity="center"
        android:text="查看加息券"
        android:textColor="@color/common_topbar_bg_color"
        android:textSize="@dimen/common_measure_20dp" />

    <Button
        android:id="@+id/sign_activity_ljjx_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_60dp"
        android:layout_marginLeft="@dimen/common_measure_20dp"
        android:layout_marginRight="@dimen/common_measure_20dp"
        android:background="@drawable/style_rect_fillet_filling_blue"
        android:gravity="center"
        android:text="立即加息"
        android:textColor="@color/white"
        android:textSize="@dimen/common_measure_20dp" />

</LinearLayout>