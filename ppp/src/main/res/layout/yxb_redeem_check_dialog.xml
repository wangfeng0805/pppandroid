<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/style_rect_fillet_filling_white_dialog"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_measure_30dp"
        android:layout_marginLeft="@dimen/common_measure_40dp"
        android:orientation="horizontal" >

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="申请赎回金额："
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_18dp"/>
        
        <TextView 
            android:id="@+id/yxb_redeem_check_dialog_apply_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/common_topbar_bg_color"
            android:textSize="@dimen/common_measure_18dp"/>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yxb_redeem_check_dialog_fee_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_measure_40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="手续费："
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_18dp" />

        <TextView
            android:id="@+id/yxb_redeem_check_dialog_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/common_topbar_bg_color"
            android:textSize="@dimen/common_measure_18dp" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/yxb_redeem_check_dialog_realmoney_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_measure_40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="实际到账金额："
            android:textColor="@color/gray"
            android:textSize="@dimen/common_measure_18dp" />

        <TextView
            android:id="@+id/yxb_redeem_check_dialog_realmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/common_topbar_bg_color"
            android:textSize="@dimen/common_measure_18dp" />
    </LinearLayout>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_measure_40dp"
        android:layout_marginTop="@dimen/common_measure_20dp"
        android:layout_marginBottom="@dimen/common_measure_20dp"
        android:text="确定要赎回吗？"
        android:textColor="@color/gray"
        android:textSize="@dimen/common_measure_18dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_60dp"
        android:orientation="horizontal">
        
        <Button
        	android:id="@+id/yxb_redeem_check_cancel_btn"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:background="@null"
        	android:gravity="center"
        	android:text="取消"
        	android:textColor="@color/common_topbar_bg_color"
        	android:textSize="@dimen/common_measure_24dp" />
        
        <View 
            android:layout_width="@dimen/common_measure_1dp"
            android:layout_height="match_parent"
            android:background="@color/edittext_line_color"/>
        
        <Button
        	android:id="@+id/yxb_redeem_check_sure_btn"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:background="@null"
        	android:gravity="center"
        	android:text="确认"
        	android:textColor="@color/common_topbar_bg_color"
        	android:textSize="@dimen/common_measure_24dp" />
        
    </LinearLayout>
    
</LinearLayout>