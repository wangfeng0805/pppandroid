<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >
    
    <include 
        layout="@layout/common_topbar"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_76dp"
        android:paddingLeft="@dimen/common_measure_20dp"
        android:paddingRight="@dimen/common_measure_20dp"
        android:background="@color/white"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="订单号："
            android:textSize="@dimen/common_measure_20dp"
            android:textColor="@color/gray"/>
        
        <TextView 
            android:id="@+id/withdraw_detail_activity_orderid"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:singleLine="true"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textSize="@dimen/common_measure_20dp"
            android:textColor="@color/gray1"/>
        
    </LinearLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_76dp"
        android:paddingLeft="@dimen/common_measure_20dp"
        android:paddingRight="@dimen/common_measure_20dp"
        android:background="@color/white"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:gravity="center_vertical|left"
            android:text="提现金额："
            android:textSize="@dimen/common_measure_20dp"
            android:textColor="@color/gray"/>
        
        <TextView 
            android:id="@+id/withdraw_detail_activity_money"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:singleLine="true"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:textSize="@dimen/common_measure_20dp"
            android:textColor="@color/common_topbar_bg_color"/>
        
    </LinearLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_76dp"
        android:paddingLeft="@dimen/common_measure_20dp"
        android:paddingRight="@dimen/common_measure_20dp"
        android:background="@color/white"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:gravity="center_vertical|left"
            android:text="申请时间："
            android:textSize="@dimen/common_measure_20dp"
            android:textColor="@color/gray"/>
        
        <TextView 
            android:id="@+id/withdraw_detail_activity_time"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/common_measure_20dp"
            android:textColor="@color/gray1"/>
        
    </LinearLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_76dp"
        android:paddingLeft="@dimen/common_measure_20dp"
        android:paddingRight="@dimen/common_measure_20dp"
        android:background="@color/white"
        android:orientation="horizontal">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:gravity="center_vertical|left"
            android:text="状态："
            android:textSize="@dimen/common_measure_20dp"
            android:textColor="@color/gray"/>
        
        <TextView 
            android:id="@+id/withdraw_detail_activity_status"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/common_measure_20dp"
            android:textColor="@color/gray1"/>
        
    </LinearLayout>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_1dp"
        android:background="@color/edittext_line_color"/>
    
    <Button
        android:id="@+id/withdraw_details_activity_cancel_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_66dp"
        android:layout_marginTop="@dimen/common_measure_40dp"
        android:layout_marginLeft="@dimen/common_measure_20dp"
        android:layout_marginRight="@dimen/common_measure_20dp"
        android:background="@drawable/blue_fillet_btn_selector"
        android:gravity="center"
        android:text="撤销提现申请"
        android:textColor="@color/white"
        android:textSize="@dimen/common_measure_26dp" />

</LinearLayout>
