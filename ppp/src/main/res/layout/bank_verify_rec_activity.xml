<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/child_background"
    android:orientation="vertical" >
    
    <include layout="@layout/common_topbar" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_248dp"
        android:layout_marginLeft="@dimen/common_measure_55dp"
        android:layout_marginRight="@dimen/common_measure_55dp"
        android:layout_marginTop="@dimen/common_measure_60dp"
        android:src="@drawable/bank_verify_bg"
        android:scaleType="fitCenter" />

    <Button
        android:id="@+id/bank_verify_rec_activity_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_measure_66dp"
        android:layout_marginLeft="@dimen/common_measure_20dp"
        android:layout_marginRight="@dimen/common_measure_20dp"
        android:layout_marginTop="@dimen/common_measure_50dp"
        android:background="@drawable/blue_fillet_btn_selector"
        android:gravity="center"
        android:text="看看产品，边逛边等"
        android:textColor="@color/white"
        android:textSize="@dimen/common_measure_26dp" />

</LinearLayout>
